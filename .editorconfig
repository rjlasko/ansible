# http://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.py]
indent_style = space

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
